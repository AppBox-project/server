{
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.2",
    "@types/lodash": "^4.14.149",
    "@types/socket.io": "^2.1.4",
    "bcryptjs": "^2.4.3",
    "concurrently": "^5.1.0",
    "express": "^4.17.1",
    "lodash": "^4.17.15",
    "mongoose": "^5.8.10",
    "nodemon": "^2.0.2",
    "nunjucks": "^3.2.0",
    "socket.io": "^2.3.0"
  },
  "name": "appbox-server",
  "version": "0.0.1",
  "description": "Server for AppBox",
  "main": "server.ts",
  "author": "Vic van Cooten",
  "license": "MIT",
  "scripts": {
    "killDb": "mongod --shutdown --dbpath /AppBox/System/Database",
    "prepareDb": "mongod --replSet 'rs0' --dbpath /AppBox/System/Database --bind_ip localhost",
    "build": "tsc",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/server.js",
    "start": "concurrently -k -p \"[{name}]\" -n \"TypeScript, Node\" -c \"yello.bold, cyan.bold\"  \"yarn prepareDb\" \"yarn run watch-ts\" \"yarn run watch-node\"",
    "test": "mocha -r ts-node/register src/**/*.spec.ts"
  }
}
